#!/usr/bin/env bash

cd ~/geemus/dotfiles && git submodule update

FILES=('aliases' 'bash_profile' 'bashrc' 'bin' 'gemrc' 'gitconfig' 'git-completion' 'hub-completion' 'inputrc' 'osx' 'screenrc' 'todo.cfg' 'vim' 'vimrc')

echo "installing dotfiles..."

for FILE in ${FILES[@]}
do
  echo "  ${FILE}"
  rm ~/.${FILE}
  ln -s ~/geemus/dotfiles/lib/${FILE} ~/.${FILE}
done

source ~/.bash_profile
