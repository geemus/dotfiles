#!/usr/bin/env bash

cd ~/dotfiles && git submodule update

rm ~/.aliases
ln -s ~/dotfiles/lib/aliases ~/.aliases

rm ~/.bash_profile
ln -s ~/dotfiles/lib/bash_profile ~/.bash_profile

rm ~/.bashrc
ln -s ~/dotfiles/lib/bashrc ~/.bashrc

rm ~/.gemrc
ln -s ~/dotfiles/lib/gemrc ~/.gemrc

rm ~/.gitconfig
ln -s ~/dotfiles/lib/gitconfig ~/.gitconfig

rm ~/.git-completion
ln -s ~/dotfiles/lib/git-completion ~/.git-completion

rm ~/.vim
ln -s ~/dotfiles/lib/vim ~/.vim

rm ~/.vimrc
ln -s ~/dotfiles/lib/vimrc ~/.vimrc

source ~/.bash_profile
