#!/usr/bin/env bash

cd ~/dotfiles && git submodule update

FILES=( 'aliases' 'bash_profile' 'bashrc' 'gemrc' 'gitconfig' 'git-completion' 'vim' 'vimrc')

echo "installing dotfiles..."

for FILE in ${FILES[@]}
do
  echo "  ${FILE}"
  rm ~/.${FILE}
  ln -s ~/dotfiles/lib/${FILE} ~/.${FILE}
done

source ~/.bash_profile
